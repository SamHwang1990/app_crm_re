//== Paragraphs component for use across site
//
//## h1, h2, h3, h4
.ac-body
  h1
    margin-top 20px
    margin-top 1rem
    margin-bottom 20px
    margin-bottom 1rem
    color $font-blue
    ac-font-size(1)

    p
      color $font-gray-light
      ac-font-size(2)

    @media(max-width : $screen-xs-max)
      margin-top 16px
      margin-top .8rem
      margin-bottom 16px
      margin-bottom .8rem
      ac-font-size(2)

      p
        ac-font-size(3)

  h2
    margin-top 0
    margin-bottom 16px
    margin-bottom .8rem
    color $font-blue
    ac-font-size(2)

    p
      color $font-gray-light
      font-size 20px
      font-size 1rem



//== Buttons component for use across site
//
//##
.ac-btn
  display inline-block
  padding 10px 20px
  padding 0.5rem 1rem
  text-decoration none
  color $font-blue
  font-size 14px
  font-size .7rem
  border none

  &:hover
  &:active
  &:visited
  &:link
    color $font-blue
    text-decoration none

.ac-btn-info
  color $font-white
  background-color $co-info

  &:link
  &:active
  &:visited
  &:hover
    color $font-white

  &:hover
    background-color $co-info-light

.ac-btn-success
  color $font-white
  background-color $co-success

  &:link
  &:active
  &:visited
  &:hover
    color $font-white

  &:hover
    background-color $co-success-light

.ac-btn-primary
  color $font-white
  background-color $co-primary

  &:link
  &:active
  &:visited
  &:hover
    color $font-white

  &:hover
    background-color $co-primary-light

.ac-btn-warning
  color $font-white
  background-color $co-warning

  &:link
  &:active
  &:visited
  &:hover
    color $font-white

  &:hover
    background-color $co-warning-light

.ac-btn-danger
  color $font-white
  background-color $co-danger

  &:link
  &:active
  &:visited
  &:hover
    color $font-white

  &:hover
    background-color $co-danger-light

.ac-btn-disable
  &,
  &:link,
  &:active,
  &:visited,
  &:hover
    color $font-white
    background-color $co-disable
    cursor default

.ac-btn-sm
  padding 8px 14px
  font-size 12px

//== Block components for use across .ac-main content block
//
//##
.ac-main-block
  width 100%
  height auto
  padding-top 30px
  padding-top 1.5rem
  padding-bottom 30px
  padding-bottom 1.5rem

  @media (max-width : $screen-xs-max)
    padding-top 16px
    padding-top .8rem
    padding-bottom 20px
    padding-bottom 1rem

.ac-main-block-inside
  margin-bottom 30px
  margin-bottom 1.5rem
  &:last-child
    margin-bottom 0

.ac-main-block-odd
  background-color $bg-gray-darker

.ac-main-block-even
  background-color $bg-gray

//== Panel components for use across site
//
//##
.ac-panel-groups
  margin-left auto
  margin-right @margin-left
  overflow hidden
  border-radius 0px
  @media (min-width : $screen-md-min)
    margin 0 100px

.ac-panel
  position relative
  padding-left 16px
  padding-left .8rem
  padding-right 16px
  padding-right .8rem
  margin 0
  margin-bottom 1px   /*animate border-bottom*/
  width 100%
  background-color $bg-white
  cursor pointer
  /*  this duration time is recommended to be equal to
      the color transition duration time of child div element */
  transition background-color 200ms ease-out

  @media (max-width:$screen-sm-max)
    padding-left 10px
    padding-left .5rem

  div
    padding-top .8rem
    padding-bottom @padding-top
    /*  the following props is orderly,
        and a set prop to stop breaking the line and replace the over text to ellipsis */
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

    transition color 200ms ease-out

  .ac-panel-title
    font-size 16px
    font-size .8rem
    color $font-blue

    @media (max-width:$screen-sm-max)
      padding-top 0.5rem
      padding-bottom 0

  .ac-panel-meta
    font-size 14px
    font-size .7rem
    color $font-gray-light
    letter-spacing .1rem

    @media (max-width:$screen-sm-max)
      padding-top 0.3rem
      padding-bottom @padding-top
      letter-spacing .03rem

  .ac-panel-arrow
    position absolute
    padding 0
    font-size 14px
    font-size .7rem
    right 20px
    top 50%
    margin-top -10px
    margin-top -.5rem
    color $font-blue

    @media (max-width:$screen-sm-max)
      display none

  .ac-panel-href
    display block
    position absolute
    top 0
    left 0
    right 0
    bottom 0

  &:hover
    background-color $bg-green

    div
      color $font-white




.ac-panel-nav
  margin-top 20px
  margin-top 1rem
  text-align center


