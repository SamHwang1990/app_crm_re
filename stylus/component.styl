//== custom bootstrap element for use across site
//

//## row custom
// maining use to center the bs's columns
.ac-col-center
  margin-left auto
  margin-right auto
  float none

// maining use for bs's nested columns, especially for col-*-12, add some margin-bottom
.ac-col-divider
  margin-bottom 10px
  margin-bottom .5rem

// maining use for bs's form-group, add border-bottom to divide from other group
.ac-form-group-divider
  padding-bottom 16px
  padding-bottom .8rem
  margin-bottom 12px
  margin-bottom .6rem

.ac-form-group-divider-border
  @extend .ac-form-group-divider
  border-bottom 1px $gray-lighter solid

//## form custom, add some ac class
form
  margin-bottom 30px
  margin-bottom 1.5rem
  legend
    color $font-blue
    transition color 300ms ease-in
  fieldset
    transition display 300ms ease-in
  textarea
    resize none

  &:last-child
    margin-bottom 0

  &.ac-form-off
    legend
      color $font-gray-light
    fieldset
      display none
      transition display 300ms ease-in

  &.ac-form-on
    legend
      color $font-blue
    fieldset
      display block
      transition display 300ms ease-in

//## margin, padding set class for use across site
.ac-margin-0-all
  margin 0

.ac-margin-0-side
  margin-left 0
  margin-right 0

.ac-padding-0-all
  padding 0

.ac-padding-0-side
  padding-left 0
  padding-right 0
