//== Panel components for use across site
//

/*! Panel Components Structure
.ac-panel-groups
  .ac-panel
    .ac-panel-abs .col-md-12
      .ac-panel-title .col-md-9
      .ac-panel-meta .col-md-2
      .ac-panel-arrow
      .ac-panel-href

    .ac-panel-detail .col-md-12
      .ac-panel-detail-heading .col-md-12
        .ac-panel-title .col-md-9
        .ac-panel-meta .col-md-2
        .ac-panel-arrow
        .ac-panel-href

      .ac-panel-detail-content .col-md-12
*/

/*! Usage Warning
.ac-panel-abs and .ac-panel-detail just can show one element,
another have to be hidden
*/


//##
.ac-panel-groups
  margin-left auto
  margin-right @margin-left
  overflow hidden
  border-radius 0px
  @media (min-width : $screen-md-min)
    margin 0 100px

.ac-panel
  position relative
  margin 0
  margin-bottom 1px   /*animate border-bottom*/
  width 100%
  background-color $bg-white
  /*  this duration time is recommended to be equal to
      the color transition duration time of child div element */
  transition background-color 200ms ease-out

  @media (max-width:$screen-sm-max)
    padding-left 10px
    padding-left .5rem

  .ac-panel-abs
    position relative
    padding-left 16px
    padding-left .8rem
    padding-right 16px
    padding-right .8rem
    cursor pointer
    .ac-panel-title
      color $font-blue
    .ac-panel-meta
      color $font-gray-light
    .ac-panel-arrow
      color $font-blue

    /* for crack */
    &:after
      content ' '
      position absolute
      bottom -1px
      left 0
      height 1px
      width 100%

    &:hover
      background-color $bg-green
      .ac-panel-title,.ac-panel-meta,.ac-panel-arrow
        color $font-white
      &:after
        background-color $bg-green

  .ac-panel-detail
    position relative
    padding-left 0
    padding-right @padding-left

    .ac-panel-detail-heading
      padding-left 0
      padding-right @padding-left
      background-color $bg-green
      cursor pointer
      .ac-panel-title,.ac-panel-meta,.ac-panel-arrow
        color $font-white
      .ac-panel-arrow
        margin-top -12px
        transform rotate(90deg)

      &:hover
        .ac-panel-arrow
          transform rotate(0deg)

    .ac-panel-detail-content
      background-color $font-white
      ac-font-size(5)
      padding 20px
      padding 1rem

  .ac-panel-title,.ac-panel-meta
    padding-top .8rem
    padding-bottom @padding-top
    transition color 200ms ease-out

  .ac-panel-title
    font-size 16px
    font-size .8rem
    /*  the following props is orderly,
        and a set prop to stop breaking the line and replace the over text to ellipsis */
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

    @media (max-width:$screen-sm-max)
      padding-top 0.5rem
      padding-bottom 0

  .ac-panel-meta
    font-size 14px
    font-size .7rem
    letter-spacing .1rem

    @media (max-width:$screen-sm-max)
      padding-top 0.3rem
      padding-bottom @padding-top
      letter-spacing .03rem

  .ac-panel-arrow
    position absolute
    padding 0
    font-size 14px
    font-size .7rem
    right 20px
    top 50%
    margin-top -10px
    margin-top -.5rem
    transition transform 300ms
    @media (max-width:$screen-sm-max)
      display none

  .ac-panel-href
    display block
    position absolute
    top 0
    left 0
    right 0
    bottom 0

.ac-panel-nav
  margin-top 20px
  margin-top 1rem
  text-align center
